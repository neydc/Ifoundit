@{
    ViewData["Title"] = "MisReportes";
}
<style>
    th {
        color:#fff;    
    }
</style>
<div class="container">
    @if (Model == null)
    {
        <h1>Usted no tiene ningún reporte</h1>
    }
    else
    {
        <br />
        <h3 class="pb-3 mb-4 font-italic border-bottom">
            Mis reportes
        </h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2 text-primary">@item.Categoria</strong>
                            <h6 class="mb-0">
                                <a class="text-dark" href="#">@item.Nombre</a>
                            </h6>
                            <div class="mb-1 text-muted small">@item.FechaPublicacion</div>
                            <p class="card-text mb-auto">@item.Descripcion</p>
                            <a class="btn btn-outline-primary btn-sm" role="button" href="#">@item.Estado</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="/PostImg/@item.Imagen" style="width: 200px;object-fit:cover">
                    </div>
                </div>
            }
        </div>

    }
</div>