                    </div>
                </div>
                    <div class="col-lg-6 col-md-6">
                        <input value="@Model.Celular" type="text" class="fadeIn third" name="Celular" placeholder="Celular" autocomplete="off">
                        <p style="font-size:11px;color:#808080">@Html.ValidationMessage("Celular")</p>
                    </div>
                <div class="col-lg-6 col-md-6 ">

