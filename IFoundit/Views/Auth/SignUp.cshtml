                <div class="col-lg-6 col-md-6">
                    <input value="@Model.Correo" type="text" class="fadeIn second" name="Correo" placeholder="Correo nombre@dominio.com" autocomplete="off">
                    <p style="font-size:11px;color:#808080">@Html.ValidationMessage("Correo")</p>
                    <p style="font-size:11px;color:#808080">@Html.ValidationMessage("Correo2")</p>
                    <p style="font-size:11px;color:#808080">@Html.ValidationMessage("CorreoDuplex")</p>

                </div>
                <div class="col-lg-6 col-md-6">
                    <input value="@Model.Contrasenia" type="password" class="fadeIn third" name="Contrasenia" placeholder="Contraseña" autocomplete="off">
                    <p style="font-size:11px;color:#808080">@Html.ValidationMessage("Contrasenia")</p>
                    <p style="font-size:11px;color:#808080">@Html.ValidationMessage("ContraseniaMenorA4")</p>
                    <h6 style="color:#808080 " class="fadeIn second">El numero ingresado:</h6>
