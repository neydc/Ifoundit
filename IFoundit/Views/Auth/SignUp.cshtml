        <form action="/auth/signup" method="post">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <input type="text" class="fadeIn second" name="Nombre" placeholder="Nombres y Apellidos" autocomplete="off" value="@Model.Nombre">
